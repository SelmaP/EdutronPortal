@model EdutronPortal.Models.EgitimTanim
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Css/Style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"></div>
        <div class="panel-body">
            <form method="post" action="/Home/Index">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label for="Kategori">Kategori :</label>
                    <select id="Kategori" name="Kategori" class="form-control">
                        <option value="">Select an option</option>
                        <option value="Online">Online</option>
                        <option value="SinifİciEgitim">Sınıf İçi Eğitim</option>
                        <option value="Kitap">Kitap </option>
                        <option value="Sunum">Sunum </option>
                        <option value="Makale">Makale </option>
                        <option value="MiniProje">Mini Proje </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="EgitmenBilgisi">Eğitmen Bilgisi :</label>
                    <select id="EgitmenBilgisi" name="EgitmenBilgisi" class="form-control">
                        <option value="">Select an option</option>
                        <option value="İcEgitmen">İç Eğitmen</option>
                        <option value="DisEgitmen">Dis Egitmen</option>
                    </select>
                </div>
                <label for="KontenjanSayisi">Kontenjan Sayisi :</label>
                <input type="text" id="KontenjanSayisi" name="KontenjanSayisi" value="" class="form-control" />
                <div class="form-group">
                    <label for="Maliyet">Maliyet :</label>
                    <input type="text" id="Maliyet" name="Maliyet" value="" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="SureBilgileri">Süre Bilgileri :</label>
                    <input type="text" id="SureBilgisi" name="SureBilgisi" value="" class="form-control" />
                </div>
                <div class="text-center">
                    <button type="submit" name="Save" class="btn btn-primary">Kaydet</button>
                    <button type="submit" name="Edit" class="btn btn-primary">Düzenle</button>
                    <button type="submit" name="Delete" class="btn btn-primary">Sil</button>
                </div>
            </form>
        </div>
    </div>
    
</body>
</html>
